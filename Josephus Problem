//Josephus Problem
import java.util.*;

public class Josephus
{
  public static void main(String[] args)
  {
    description();
    Scanner kb = new Scanner(System.in);
    System.out.println("How many people are in the circle? ");
    int num = kb.nextInt();
    double convert = 0;
    double count = 0;
    while(Math.pow(2, count) <= num)
    {
      
      convert = Math.pow(2,count);
      count++;
    }
    double l = num - convert;
    double win = (2 * l) + 1;
    System.out.println("The winning seat position is " + (int)win + ". ");
  }
  
  public static void description()
  {
    System.out.println("This program prints the winning seat number in a \"Josephus\" circle of x amount of people.");
  }
  
}

  
